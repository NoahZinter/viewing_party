<div class="flex flex-col bg-gray-200 p-8 justify-center">

  <div class="flex justify-center m-8">
    <%= render 'layouts/search_form' %>
  </div>

  <div class="flex flex-1 h-1/2 space-x-8">
    <% 4.times do %>
      <div class="px-8 pt-8 pb-4 bg-blue-400 bg-opacity-70 rounded-xl">
        <img src="<%= @image_base_url %><%= @movie[:poster_path] %>" alt="">
        <div class="">
          <p class="text-2xl"><%= @movie[:title] %></p>
          <p class="text-md">Average Rating: <%= @movie[:vote_average] %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>